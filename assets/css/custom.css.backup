/* Custom styles for the academic site */

.publication-item {
  margin-bottom: 2em;
  padding: 1.5em;
  border-left: 4px solid #90caf9;
  background-color: #fff;
  border-radius: 0 12px 12px 0;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  border: 1px solid #e0e0e0;
}

.publication-item h3 {
  margin-top: 0;
  color: #424242;
  font-size: 1.2em;
  line-height: 1.4;
}

.publication-authors {
  color: #757575;
  font-style: italic;
  margin-bottom: 0.5em;
}

.publication-venue {
  color: #616161;
  font-weight: 500;
  margin-bottom: 1em;
}

.publication-links {
  margin-top: 1em;
}

.publication-links .btn {
  margin-right: 0.5em;
  margin-bottom: 0.5em;
}

.publication-item details {
  margin-top: 1em;
}

.publication-item summary {
  cursor: pointer;
  font-weight: 500;
  color: #2196f3;
}

.publication-item summary:hover {
  color: #1976d2;
}

.publication-item details p {
  margin-top: 0.5em;
  padding-left: 1em;
  border-left: 2px solid #e0e0e0;
  color: #757575;
}

/* Homepage enhancements */
.page__hero .page__title {
  font-size: 2.5em;
}

.page__hero .page__lead {
  font-size: 1.2em;
}

/* Research interests list */
.page__content ul li {
  margin-bottom: 0.5em;
}

.page__content strong {
  color: #424242;
}

/* Feature wrapper adjustments */
.feature__wrapper {
  margin-bottom: 2em;
}

.feature__item {
  margin-bottom: 1em;
}

.archive__item {
  background: #fff !important;
  border: 1px solid #e0e0e0 !important;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08) !important;
}

.archive__item-title {
  color: #424242 !important;
}

.archive__item-excerpt {
  color: #757575 !important;
}

/* Button styling improvements */
.btn--small {
  font-size: 0.8em;
  padding: 0.25em 0.5em;
}

/* Navigation enhancements */
.masthead {
  border-bottom: 1px solid #e0e0e0;
}

/* Table of contents styling */
.toc {
  background: #fff !important;
  border: 1px solid #e0e0e0 !important;
}

.toc .toc__title {
  color: #424242;
}

.toc .toc__menu a {
  color: #616161;
}

.toc .toc__menu a:hover {
  color: #2196f3;
}

.toc__icon {
  color: #2196f3 !important;
}

/* Footer styling */
.page__footer {
  margin-top: 3em;
  border-top: 1px solid #e0e0e0;
  background-color: #fff !important;
}

.page__footer-follow a {
  color: #2196f3 !important;
}

.page__footer-follow a:hover {
  color: #1976d2 !important;
}

/* Publication filters */
.publication-filters {
  background: #fff !important;
  border: 1px solid #e0e0e0 !important;
}

.publication-filters h3 {
  color: #424242 !important;
}

.filter-btn.active {
  background: #2196f3 !important;
  border-color: #2196f3 !important;
}

.filter-btn:hover {
  background: #f5f5f5 !important;
  border-color: #bdbdbd !important;
}

/* Video Gallery Styles */
.video-container {
  margin: 2em 0;
}

.video-item {
  margin-bottom: 3em;
}

.video-placeholder {
  width: 100%;
  height: 400px;
  background-color: #f8f9fa;
  border: 2px dashed #dee2e6;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #6c757d;
  font-size: 1.25em;
  margin-bottom: 1em;
  transition: all 0.3s ease;
}

.video-placeholder:hover {
  background-color: #e9ecef;
  border-color: #adb5bd;
}

.video-placeholder i {
  font-size: 3em;
  margin-bottom: 0.5em;
  color: #52adc8;
}

.video-description {
  padding: 1em;
  background-color: #f8f9fa;
  border-radius: 8px;
  border-left: 4px solid #52adc8;
  color: #495057;
  font-style: italic;
}

.video-description p {
  margin: 0;
}

/* Citation Styles */
.citation-container {
  margin: 2em 0;
}

.citation-details {
  background-color: #f8f9fa;
  border: 1px solid #dee2e6;
  border-radius: 8px;
  padding: 1.5em;
  margin-bottom: 1em;
}

.citation-details summary {
  cursor: pointer;
  font-weight: 600;
  color: #007bff;
  font-size: 1.1em;
  padding: 0.5em 0;
  list-style: none;
  position: relative;
}

.citation-details summary::-webkit-details-marker {
  display: none;
}

.citation-details summary::before {
  content: "â–¶";
  position: absolute;
  left: -1.5em;
  transition: transform 0.2s;
  color: #52adc8;
}

.citation-details[open] summary::before {
  transform: rotate(90deg);
}

.citation-details summary:hover {
  color: #0056b3;
}

.citation-text {
  background-color: #2f3337;
  color: #f8f8f2;
  padding: 1.5em;
  border-radius: 6px;
  font-family: 'Courier New', Courier, monospace;
  font-size: 0.9em;
  line-height: 1.4;
  margin: 1em 0 0 0;
  overflow-x: auto;
  white-space: pre-wrap;
  border: 1px solid #495057;
}

/* Project Info Styles */
.project-info .archive__item {
  border-left: 4px solid #52adc8;
}

.links-section .archive__item {
  border-left: 4px solid #28a745;
}

.technical-details .archive__item {
  border-left: 4px solid #6f42c1;
}

/* Button spacing for resource links */
.links-section .btn {
  margin-right: 0.5em;
  margin-bottom: 0.5em;
}

/* Video Grid Styles */
.video-grid-section {
  padding: 3em 0;
  background-color: #fff;
  border-bottom: 1px solid #e0e0e0;
}

.video-grid-section h2 {
  text-align: center;
  margin-bottom: 2em;
  color: #424242;
  font-size: 2.5em;
}

/* Dot Navigation */
.video-grid-section input[type="radio"] {
  display: none;
}

.dot-indicators {
  display: flex;
  justify-content: center;
  gap: 1em;
  text-align: center;
  margin-bottom: 3em;
}

.dot-indicator {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background-color: #dee2e6;
  border: 2px solid #adb5bd;
  cursor: pointer;
  transition: all 0.3s ease;
  display: inline-block;
}

.dot-indicator:hover {
  background-color: #adb5bd;
  border-color: #6c757d;
  transform: scale(1.2);
}

/* Active dot indicators */
#loading-dot-1:checked ~ .dot-indicators label[for="loading-dot-1"],
#loading-dot-2:checked ~ .dot-indicators label[for="loading-dot-2"],
#loading-dot-3:checked ~ .dot-indicators label[for="loading-dot-3"],
#overclocking-dot-1:checked ~ .dot-indicators label[for="overclocking-dot-1"],
#overclocking-dot-2:checked ~ .dot-indicators label[for="overclocking-dot-2"],
#overclocking-dot-3:checked ~ .dot-indicators label[for="overclocking-dot-3"] {
  background-color: #52adc8;
  border-color: #52adc8;
  transform: scale(1.3);
}

/* Video Grid - Slider Functionality */
.video-grid {
  position: relative;
  max-width: 800px;
  margin: 0 auto;
  overflow: hidden;
}

.video-grid .video-item {
  display: none;
  margin-bottom: 0;
  width: 100%;
}

/* Show active videos based on radio button selection */
#loading-dot-1:checked ~ .video-grid .video-item:nth-child(1),
#loading-dot-2:checked ~ .video-grid .video-item:nth-child(2),
#loading-dot-3:checked ~ .video-grid .video-item:nth-child(3),
#overclocking-dot-1:checked ~ .dot-indicators ~ .video-grid .video-item:nth-child(1),
#overclocking-dot-2:checked ~ .dot-indicators ~ .video-grid .video-item:nth-child(2),
#overclocking-dot-3:checked ~ .dot-indicators ~ .video-grid .video-item:nth-child(3) {
  display: block;
  animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

/* Method Section Styles */
.method-section {
  padding: 3em 0;
  background-color: #f8f9fa;
}

.method-section h2 {
  text-align: center;
  margin-bottom: 2em;
  color: #424242;
  font-size: 2.5em;
}

.method-content {
  margin-bottom: 3em;
}

.method-section .archive__item {
  border-left: 4px solid #6f42c1;
  margin-bottom: 2em;
}

.figure-placeholder {
  margin: 2em 0;
  text-align: center;
}

.figure-container {
  width: 100%;
  height: 300px;
  background-color: #fff;
  border: 2px dashed #dee2e6;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #6c757d;
  font-size: 1.1em;
  transition: all 0.3s ease;
}

.figure-container:hover {
  background-color: #f8f9fa;
  border-color: #adb5bd;
}

.figure-container i {
  font-size: 2.5em;
  margin-bottom: 0.5em;
  color: #6f42c1;
}

.method-section .citation-container {
  margin-top: 3em;
  padding-top: 2em;
  border-top: 2px solid #dee2e6;
}

.method-section .citation-container h3 {
  color: #424242;
  margin-bottom: 1em;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .publication-item {
    padding: 1em;
    margin-bottom: 1.5em;
  }
  
  .publication-item h3 {
    font-size: 1.1em;
  }
  
  .page__hero .page__title {
    font-size: 2em;
  }
  
  .video-placeholder {
    height: 250px;
    font-size: 1em;
  }
  
  .video-placeholder i {
    font-size: 2em;
  }
  
  .citation-text {
    font-size: 0.8em;
  }
  
  .links-section .btn {
    display: block;
    margin-bottom: 0.5em;
    text-align: center;
  }
  
  .video-grid-section h2,
  .method-section h2 {
    font-size: 2em;
  }
  
  .video-grid {
    max-width: 100%;
  }
  
  .dot-indicators {
    gap: 0.75em;
  }
  
  .dot-indicator {
    width: 10px;
    height: 10px;
  }
  
  .figure-container {
    height: 200px;
    font-size: 1em;
  }
  
  .figure-container i {
    font-size: 2em;
  }
  
  .video-grid-section {
    padding: 2em 0;
  }
  
  .method-section {
    padding: 2em 0;
  }
}

/* Abstract Section Styles */
.abstract-section {
  background-color: #f8f9fa;
}

.abstract-section h2 {
  text-align: center;

  color: #424242;
  font-size: 2.5em;
}
